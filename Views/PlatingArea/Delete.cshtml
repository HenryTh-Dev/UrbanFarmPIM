@model Client

<h2>Deletar Cliente</h2>

<h3>Tem certeza de que deseja excluir este cliente?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">CNPJ</dt>
        <dd class="col-sm-10">@Model.CNPJ</dd>

        <dt class="col-sm-2">Endere√ßo</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>
<div>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ClientId" />
        <button type="submit" class="btn btn-danger">Deletar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
