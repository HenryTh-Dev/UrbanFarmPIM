@model UrbanFarm.Models.PlantingArea

<h2>Planting Area Details</h2>

<div>
    <h4>Planting Area</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

        <dt class="col-sm-2">Farm</dt>
        <dd class="col-sm-10">@Model.Farm?.Name</dd>

        <dt class="col-sm-2">Plantings</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var planting in Model.Plantings)
                {
                    <li>@planting.PlantingDate.ToString("dd/MM/yyyy")</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.PlantingAreaId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
