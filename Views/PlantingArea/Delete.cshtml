@model UrbanFarm.Models.PlantingArea

<h2>Delete Planting Area</h2>

<h3>Are you sure you want to delete this planting area?</h3>
<div>
    <h4>Planting Area</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

        <dt class="col-sm-2">Farm</dt>
        <dd class="col-sm-10">@Model.Farm?.Name</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PlantingAreaId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
