@model UrbanFarm.Models.Farm

<h2>Farm Details</h2>

<div>
    <h4>Farm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>
    </dl>

    <h5>Planting Areas</h5>
    <ul>
        @foreach (var area in Model.PlantingAreas)
        {
            <li>@area.Name</li> <!-- Substitua `Name` com a propriedade correta da Ã¡rea de plantio -->
        }
    </ul>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.FarmId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
