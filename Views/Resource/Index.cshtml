@model IEnumerable<UrbanFarm.Models.Resource>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Admin Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Employee" asp-action="Index">Employees</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Farm" asp-action="Index">Farms</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Planting" asp-action="Index">Plantings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="PlantingArea" asp-action="Index">Planting Areas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Resource" asp-action="Index">Resources</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Sale" asp-action="Index">Sales</a>
                        </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Supplier" asp-action="Index">Suppliers</a>
                    </li>
                </ul>

                <!-- Botão de login alinhado à direita -->
                <a style="color: white;" asp-controller="Home" asp-action="Index" class="btn btn-success ml-2">Sair</a>
            </div>
        </div>
    </nav>
</header>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="display-4">Nosso catálogo</h1>
        <p class="lead">
            <a href="" class="btn btn-success mt-3">
                <i class="fa fa-whatsapp" style="font-size:24px"></i>
                Clique em comprar para entrar em contato com nossos vendedores!
            </a>
        </p>
    </div>

    @if (Model != null && Model.Any(r => r.Type == "Colheita"))
    {
        <div class="row">
            @foreach (var item in Model.Where(r => r.Type == "Colheita"))
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm h-100 d-flex flex-column position-relative">

                        <!-- Slightly larger image in top-right corner -->
                        <img src="@item.ImagePath" alt="@item.Name"
                             style="width: 120px; height: 120px; object-fit: cover; position: absolute; top: 10px; right: 10px; border-radius: 8px;">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text"><strong>Estoque:</strong> @item.Quantity</p>
                            <p class="card-text"><strong>Preço:</strong> R$ @item.Price.ToString("F2")</p>
                            <a href="https://api.whatsapp.com/send/?phone=5518999999999&text=Olá%2C+gostaria+de+informações+sobre+a+compra+de+@item.Name.&type=phone_number&app_absent=0"
                               class="btn btn-success mt-2"
                               style="padding: 5px 10px; font-size: 0.9rem;">Comprar Agora</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="lead">Nenhum produto disponível no momento.</p>
        </div>
    }
</div>
