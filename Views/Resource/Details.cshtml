@model UrbanFarm.Models.Resource

<h2>Resource Details</h2>

<div>
    <h4>Resource</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Model.Type</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Quantity</dt>
        <dd class="col-sm-10">@Model.Quantity</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price</dd>

        <dt class="col-sm-2">Plantings</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var planting in Model.Plantings)
                {
                    <li>@planting.PlantingDate.ToString("dd/MM/yyyy")</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.ResourceId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
