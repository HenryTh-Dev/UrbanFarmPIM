@model UrbanFarm.Models.Planting

<h2>Delete Planting</h2>

<h3>Are you sure you want to delete this planting?</h3>
<div>
    <h4>Planting</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Planting Date</dt>
        <dd class="col-sm-10">@Model.PlantingDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Planting Area</dt>
        <dd class="col-sm-10">@Model.PlantingArea?.Name</dd>

        <dt class="col-sm-2">Resource</dt>
        <dd class="col-sm-10">@Model.Resource?.Name</dd>

        <dd class="col-sm-10">
        </dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PlantingId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
