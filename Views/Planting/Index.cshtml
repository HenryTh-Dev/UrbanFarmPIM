@model IEnumerable<UrbanFarm.Models.Planting>

<h2>Planting List</h2>
<p>
    <a asp-action="Create">Create New Planting</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Planting Date</th>
            <th>Planting Area</th>
            <th>Resource</th>
            <th>Employees</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planting in Model)
        {
            <tr>
                <td>@planting.PlantingDate.ToString("dd/MM/yyyy")</td>
                <td>@planting.PlantingArea?.Name</td>
                <td>@planting.Resource?.Name</td>
                <td>@string.Join(", ", planting.Employees.Select(e => e.Name))</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@planting.PlantingId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@planting.PlantingId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@planting.PlantingId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
