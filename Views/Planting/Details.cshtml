@model Client

<h2>Detalhes do Cliente</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">CNPJ</dt>
        <dd class="col-sm-10">@Model.CNPJ</dd>

        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ClientId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
