@model UrbanFarm.Models.Planting

<h2>Edit Planting</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlantingId" />
    <div class="form-group">
        <label asp-for="PlantingDate"></label>
        <input asp-for="PlantingDate" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PlantingAreaId">Planting Area</label>
        <select asp-for="PlantingAreaId" asp-items="ViewBag.PlantingAreaId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="ResourceId">Resource</label>
        <select asp-for="ResourceId" asp-items="ViewBag.ResourceId" class="form-control"></select>
    </div>
    <div class="form-group">
        <label>Employees</label>
        <select asp-for="Employees" asp-items="ViewBag.Employees" multiple="multiple" class="form-control"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<p>
    <a asp-action="Index">Back to List</a>
</p>
