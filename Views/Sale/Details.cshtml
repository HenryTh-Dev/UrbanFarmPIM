@model UrbanFarm.Models.Sale

<h2>Sale Details</h2>

<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Sale Date</dt>
        <dd class="col-sm-10">@Model.SaleDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.Client?.Name</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>

        <dt class="col-sm-2">Items</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var item in Model.SaleItems)
                {
                    <li>@item.Resource?.Name - Quantity: @item.Quantity - Price: @item.UnitPrice</li> <!-- Altere `Price` para `UnitPrice` ou a propriedade correta -->
                }
            </ul>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.SaleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
