@model UrbanFarm.Models.Sale

<h2>Delete Sale</h2>

<h3>Are you sure you want to delete this sale?</h3>
<div>
    <h4>Sale</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Sale Date</dt>
        <dd class="col-sm-10">@Model.SaleDate.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Client</dt>
        <dd class="col-sm-10">@Model.Client?.Name</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SaleId" />
    <button type="submit" class="btn btn-danger">Delete</button> |
    <a asp-action="Index">Back to List</a>
</form>
