@model UrbanFarm.Models.Supplier

<h2>Supplier Details</h2>

<div>
    <h4>Supplier</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">CNPJ</dt>
        <dd class="col-sm-10">@Model.CNPJ</dd>

        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Address</dd>

        <dt class="col-sm-2">Phone</dt>
        <dd class="col-sm-10">@Model.Phone</dd>

        <dt class="col-sm-2">Resources</dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var resource in Model.Resources)
                {
                    <li>@resource.Name - Quantity: @resource.Quantity</li>
                }
            </ul>
        </dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.SupplierId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</p>
